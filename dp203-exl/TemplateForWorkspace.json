							"\r\n",
							"# Create the table with appropriate schema\r\n",
							"create_table_sql = f\"\"\"\r\n",
							"CREATE TABLE {table_name}\r\n",
							"(\r\n",
							"    sale_id STRING,\r\n",
							"    product_id STRING,\r\n",

							"    CLUSTERED COLUMNSTORE INDEX\r\n",
							")\r\n",
							"AS\r\n",
							"SELECT * FROM temp_sales_data\r\n",
							"\"\"\"\r\n",
							"\r\n",
							"# Execute the query using Spark SQL\r\n",
							"try:\r\n",
							"    spark.sql(create_table_query)\r\n",
